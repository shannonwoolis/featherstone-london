<style>
    #shopify-section-categories { z-index:99; }
    .catmnTtl {min-width:220px; padding-{{ pmRight }}:15px; font-size:{{ section.settings.fst }}px; font-weight:{{ section.settings.fwt }}; color:{{ section.settings.mlcl }}; border-{{ pmRight }}:1px solid {{ section.settings.sepration }}; margin-{{ pmRight }}:10px; cursor:pointer;  }
    .catmnTtl:hover { color:{{ section.settings.mlclh }}; }

    #catNav { padding:13px 0; margin-top: 1px; pointer-events:none; opacity:0; visibility:hidden; position:absolute; {{ pmLeft }}:0; top:100%; width:250px; pointer-events:none;
        background-color:{{ secSt.bg }}; border-radius:0 0 6px 6px; transform:translateY(20px); transition:all 0.3s ease-in; }
	
    #shopify-section-categories:hover #catNav { transform:translateY(0); opacity:1; visibility:visible; pointer-events:visible; pointer-events:visible; }
    
    #catNav a .lbl { color:{{ settings.nav_link_lbl }}; font-family:var(--ft1); font-size:11px; font-weight:400; letter-spacing:0; line-height:1; display:inline-block; padding:3px 4px; margin-top: 1px; height: 16px; margin-left:5px; }
    #catNav .nm_lbl1 { background-color:{{ secSt.nlbl1 }}; }
    #catNav .nm_lbl1 { background-color:{{ secSt.nlbl1 }}; }
    #catNav .nm_lbl2 { background-color:{{ secSt.nlbl2 }}; }
    #catNav .nm_lbl3 { background-color:{{ secSt.nlbl3 }}; }
    #catNav .nm_lbl4 { background-color:{{ secSt.nlbl4 }}; }
    #catNav .nm_lbl5 { background-color:{{ secSt.nlbl5 }}; }

    #catNav > li > a { color:{{ secSt.cl }}; font-family:var(--{{ secSt.ft }}); font-size:{{ secSt.fs }}px; font-weight:{{ secSt.fw }}; padding:8px 20px 8px 25px; display:flex; align-items:center; }
    #catNav > li:hover > a, #catNav > li > a.active { color:{{ secSt.clh }};}

    .cmgmenu { opacity:0; visibility:hidden; padding:30px 35px 20px; margin:0; position:absolute; top:0; {{ pmLeft }}:100%; z-index:9999; min-height:100%; max-height:550px; width:950px; overflow:auto; border-radius:0 0 6px 6px;   background-color:{{ secSt.bg }};     
        {% if section.settings.boxshdow %} box-shadow:0px 0px 15px rgba(0,0,0,0.1); {% endif %} pointer-events:none; transform:translateY(20px); transition:all 0.3s ease-in; }

    .cmgmenu a.snav { color:{{ secSt.mcl }}; font-family:var(--{{ secSt.mft }}); font-size:{{ secSt.mfs }}px; font-weight:{{ secSt.mfw }}; display:inline-flex; margin-bottom:10px; }
    .cmgmenu a.snav:hover { color:{{ secSt.mclh }}; }
    
    #catNav li.lvl-1 { margin-bottom:10px; }
    #catNav a.lvl-1 { color:{{ secSt.mtcl }}; font-family:var(--{{ secSt.mtft }}); font-size:{{ secSt.mtfs }}px; font-weight:{{ secSt.mtfw }}; }
    #catNav a.lvl-1:hover {  color:{{ secSt.mtclh }} }

    .cmgmenu.st1 .imageCol { margin-bottom:30px; }
    .cmgmenu.st1 .img-ttl { padding:6px 20px; border-radius:2px; color:{{ settings.nav_mm_link }}; background:{{ settings.nav_mm_bg }}; display:block; position:absolute; bottom:20px; }

    .cmgmenu.st2 { padding:0; }
    .cmgmenu.st2 .prColumn, #catNav > li .cmgmenu.style2 .mmftcolumn { padding:20px; width:auto; }
    .cmgmenu.st2 .grid_bx { line-height:1.2; }

    .cmgmenu.st4 { background-repeat:no-repeat; background-size:auto 100%; }
    
    .cmgmenu.st5 { padding:0;  }
    .cm5main { border-bottom:1px solid #eee; }
    #catNav .cm5main a.lvl-1 { padding:15px 20px; display:block; border-left:1px solid #eee; border-bottom:2px solid transparent; }
    #catNav .cm5main a.lvl-1:last-child { border-right:1px solid #eee; }
    #catNav .cm5main a.lvl-1:hover,
    #catNav .cm5main a.lvl-1.active { color:{{ secSt.mtclh }}; border-bottom:2px solid {{ secSt.mtclh }}; }
    
    .admmsub { display:none; padding:30px; }
    .admmsub.active { display:flex; }
    .admmsub a { display:block; }
    .mcatImg { width:var(--isz); height:var(--isz); border-radius:var(--ibr); }
    .cmgmenu a.mcatLink { color:{{ secSt.mcl }}; font-size:{{section.settings.mfs}}px; display:inline-flex; padding:6px 10px 7px; align-items:center; }
    .cmgmenu a.mcatLink:hover { color:{{ secSt.mclh }};}
    
    .cm6main { width:220px; margin-bottom:30px; }
    #catNav .cm6main a.lvl-1 { font-size:{{section.settings.mtfs}}px; padding:12px; display:flex; align-items:center; border-{{ pmLeft }}:2px solid transparent; }
    #catNav .cm6main a.lvl-1 + a.lvl-1 { border-top:1px solid #eee; }
    #catNav .cm6main a.lvl-1:hover,
    #catNav .cm6main a.lvl-1.active { color:{{ secSt.mtclh }}; border-{{ pmLeft }}-color:{{ secSt.mtclh }}; }
    .cmgmenu.st6 .admmsub { padding:{% if isRtl %}0 30px 30px 0{% else %}0 0 30px 30px{% endif %}; }
    
    .cmgmenu.st7 { padding:30px; }

    #catNav li:hover > div.cmgmenu { transform:translateY(0); opacity:1; visibility:visible; pointer-events:visible; }
	
	.admmsub .pr_review {   display: none; }

    .cmgmenu.st7 li { padding-bottom:10px;}
</style>
